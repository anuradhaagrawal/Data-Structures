import java.util.*;


public class Main {

 

    public static void main(String[] args) {

      int[] nums = {7,5,2,1,1,1,1};
      int min = nums[0];
      int profit = 0;
      for (int i= 1; i<nums.length; i++){
        if(nums[i] < min)
        min = nums[i];
        profit = Math.max(nums[i] - min, profit);

        

        }
      

        System.out.println(profit);
        
          
        


      }
}
       
      
