import java.util.*;
class Node {
    Node next;
     Node prev;
     int value;

    public Node(int value) {
        this.value = value;
        this.next = null;
        this.prev = null;
    }



   
}

class Main {

  Node head;
  Node tail;
  int length;

  Main(int value){
    this.head = new Node(value);
    this.tail = this.head;
    this.length = 1;
  }

void append(int value){
    Node temp = new Node(value);
    temp.prev = this.tail;
    this.tail.next = temp;
    this.tail = temp;
    this.length++;

  }

  void prepend(int value){

    Node temp = new Node(value);
    this.head.prev = temp;
    temp.next = this.head;
    this.head = temp;
    this.length++;

  }

   public int[] printList() {
        int[] myList = new int[length];
        Node current = this.head;
        int i = 0;

        while (current != null) {
            myList[i] = current.value;
            current = current.next;
            i++;
        }
        return myList;
    }

    boolean insert(int value, int index){

     if (index > length){
        append(value);
        return true;
      }
      if (index ==1){
        prepend(value);
        return true;
      }
       Node temp = new Node(value);
       Node current = this.head;
             int i = 1;
      while ((i< (index-1) ) && (current != null)){
        current = current.next;
        i++;

      }

      temp.next = current.next;
      temp.prev = current;
      current.next = temp;
      temp.next.prev = temp;
      length++;

      return true;


    }

    boolean remove(int index){
      if(index < 1 || index > length){
        return false;
      }
      else
      if ( index == 1){
        this.head = this.head.next;
        length--;
        return true;
      }
      else
      {
        Node current = this.head;
      for (int i =1; i < index-1; i++)
      {
        current = current.next;

      }

      current.next = current.next.next;
     
      length--;
      if(current.next == null)
      this.tail = current;
      else
       current.next.prev = current;

      return true;
      }


    }






    public static void main(String[] args){

      Main list = new Main(1);
      list.append(2);
       list.prepend(3);
       list.insert(4,2);
       list.insert(4,5);
       list.insert(4,1);
       System.out.println("Here is the list" + Arrays.toString(list.printList()));

      list.remove(2);
       System.out.println("Here is the list" + Arrays.toString(list.printList()));
       list.remove(4);
       System.out.println("Here is the list" + Arrays.toString(list.printList()));
     
   
    }
}

